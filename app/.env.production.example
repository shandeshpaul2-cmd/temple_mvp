# Production Environment Variables Template
# Copy this to .env.production for production deployment

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/temple_production_db"

# Application Configuration
NODE_ENV="production"
NEXT_PUBLIC_BASE_URL="https://your-domain.com"

# Razorpay Production Keys
RAZORPAY_KEY_ID="rzp_live_xxxxxxxxxxxxxxxx"
RAZORPAY_KEY_SECRET="your_razorpay_live_secret"
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_live_xxxxxxxxxxxxxxxx"

# Production WhatsApp Twilio Configuration
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_production_auth_token"
TWILIO_WHATSAPP_NUMBER="+91XXXXXXXXXX"
WHATSAPP_TEST_MODE="false"

# WhatsApp Business Configuration
WHATSAPP_BUSINESS_PROFILE_ID="your_business_profile_id"
WHATSAPP_WEBHOOK_URL="https://your-domain.com/api/whatsapp/webhook"
WHATSAPP_WEBHOOK_TOKEN="your_secure_webhook_verification_token"

# Rate Limiting & Performance
WHATSAPP_RATE_LIMIT_PER_SECOND="50"
WHATSAPP_RATE_LIMIT_PER_MINUTE="1000"
WHATSAPP_ENABLE_DELIVERY_REPORTS="true"
WHATSAPP_LOG_LEVEL="info"

# Message Templates (Pre-approved by WhatsApp)
WHATSAPP_TEMPLATE_DONATION_RECEIPT="donation_receipt"
WHATSAPP_TEMPLATE_POOJA_CONFIRMATION="pooja_booking_confirmation"
WHATSAPP_TEMPLATE_PAYMENT_REQUEST="payment_request"

# SMS Configuration (Backup)
SMS_API_KEY="your_production_sms_api_key"
SMS_SENDER_ID="TEMPLE"

# File Storage Configuration
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Security & Monitoring
SESSION_SECRET="your_long_random_session_secret_for_production"
JWT_SECRET="your_jwt_secret_for_production"
LOG_LEVEL="info"
ENABLE_ERROR_MONITORING="true"

# Temple Information
TEMPLE_NAME="Shri Raghavendra Swamy Brundavana Sannidhi"
TEMPLE_PHONE_1="9945594845"
TEMPLE_PHONE_2="9902520105"
TEMPLE_EMAIL="contact@temple.org"
TEMPLE_ADDRESS="9/2, Damodar Modaliar Road, Ulsoor, Bangalore - 560008"

# Certificate Generator Service
CERTIFICATE_SERVICE_URL="https://your-certificate-service.com"

# Analytics & Monitoring
ENABLE_ANALYTICS="true"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Backup & Recovery
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# Development Override (Set to "true" to temporarily enable test mode in production)
# ONLY use this for debugging, not for regular operations
# DEVELOPMENT_MODE="false"